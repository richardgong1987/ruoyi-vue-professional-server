FROM openjdk:17-jdk-slim
COPY app.jar /app.jar
WORKDIR /

# For fixed issue: Java â€“ NoClassDefFoundError: Could not initialize class sun.awt.X11FontManager
RUN apt-get update; apt-get install -y fontconfig libfreetype6
